@model IEnumerable<bookingFlight.Models.ChuyenBay>

@{
    ViewBag.Title = "SearchResults";
}
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" />
</head>
<body>
    <div class="container mt-5">
        <h2 class="mb-4">Kết quả tìm kiếm chuyến bay</h2>

        @if (Model != null && Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-striped table-bordered">
                    <thead class="thead-dark">
                        <tr>
                            <th>Mã chuyến bay</th>
                            <th>Sân bay đi</th>
                            <th>Sân bay đến</th>
                            <th>Ngày giờ đi</th>
                            <th>Ngày giờ đến</th>
                            <th>Hành động</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var flight in Model)
                        {
                            <tr>
                                <td>@flight.MaCB</td>
                                <td>@flight.MaSB_Di</td>
                                <td>@flight.MaSB_Den</td>
                                <td>@flight.NgayGioDi</td>
                                <td>@flight.NgayGioDen</td>
                                <td>
                                    @Html.ActionLink("Book Now", "BookFlight", new { id = flight.MaCB }, new { @class = "btn btn-primary btn-sm" })
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="alert alert-warning" role="alert">
                Không tìm thấy chuyến bay nào.
            </div>
        }
    </div>

    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>