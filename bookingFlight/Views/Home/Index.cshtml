@{
    ViewBag.Title = "Home Page";
}

@using (Html.BeginForm("SearchFlights", "Home", FormMethod.Post))  // Form gửi dữ liệu đến phương thức SearchFlights của HomeController
{
    <link rel="stylesheet" href="~/Asset/style.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.2/css/all.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js" />
    <div class="wrapper bg-white">
        <div class="form-group border-bottom d-flex align-items-center justify-content-between flex-wrap">
            <label class="option my-sm-0 my-2">
                <input type="radio" name="radio" value="OneWay" checked>One Way
                <span class="checkmark"></span>
            </label>
        </div>
        <div class="form-group d-sm-flex margin">
            <div class="d-flex align-items-center flex-fill me-sm-1 my-sm-0 my-4 border-bottom position-relative">
                <input type="text" name="from" required placeholder="From" class="form-control">
                <div class="label" id="from"></div>
                <span class="fas fa-dot-circle text-muted"></span>
            </div>
            <div class="d-flex align-items-center flex-fill ms-sm-1 my-sm-0 my-4 border-bottom position-relative">
                <input type="text" name="to" required placeholder="To" class="form-control">
                <div class="label" id="to"></div>
                <span class="fas fa-map-marker text-muted"></span>
            </div>
        </div>
        <div class="form-group d-sm-flex margin">
            <div class="d-flex align-items-center flex-fill me-sm-1 my-sm-0 border-bottom position-relative">
                <input type="datetime-local" name="departDateTime" required placeholder="Depart Date and Time" class="form-control">
                <div class="label" id="depart"></div>
            </div>
        </div>
        <div class="form-group my-3">
            <button type="submit" class="btn btn-primary rounded-0 d-flex justify-content-center text-center p-3">
                Search Flights
            </button>
        </div>
    </div>
        
 }
